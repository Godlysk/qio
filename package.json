{
  "private": true,
  "author": "Tushar Mathur <tusharmath@gmail.com>",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "description": "A type-safe functional module that solves practical IO problems for node and the browser.",
  "keywords": [
    "io",
    "functional",
    "typescript",
    "pure",
    "promise"
  ],
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/tusharmath/fio.git"
  },
  "scripts": {
    "lint": "tslint --project .",
    "prepublishOnly": "tsc -d",
    "prettier": "git ls-files | grep '.ts$' | xargs prettier --write --config=.prettierrc",
    "test": "mocha --opts=packages/chai/mocha.opts",
    "lerna:publish": "lerna publish from-git --yes",
    "create-docs": "cd packages/website && yarn build && cd .. && cd .. && typedoc;",
    "update-benchmarks": "packages/benchmarks/run.sh",
    "example": "node packages/example/guess-the-number/src/Run"
  },
  "version": "0.0.0-development",
  "devDependencies": {
    "cz-lerna-changelog": "^2.0.2",
    "lerna": "^3.18.2",
    "mocha": "^6.2.2",
    "prettier": "^1.18.2",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "typedoc": "^0.15.0",
    "typescript": "^3.6.4",
    "typescript-tslint-plugin": "^0.5.4"
  },
  "workspaces": [
    "packages/*"
  ],
  "name": "fio"
}
